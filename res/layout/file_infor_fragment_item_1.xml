<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_centerInParent="true"
    	android:background="@drawable/view_item_selector"
    	android:padding="5dip"
        >
        <org.yyu.msi.view.PowerImageView 
	        android:id="@+id/iv_file_infor_fragment_item_type"
	        android:layout_width="fill_parent"
	        android:layout_height="80dip"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentTop="true"
	        android:scaleType="centerCrop"
	        />
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/iv_file_infor_fragment_item_type"
	        android:orientation="vertical"
	        >
	        <TextView 
		        android:id="@+id/tv_file_infor_fragment_item_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/black"
		        android:textSize="15dip"
		        android:singleLine="true"
		        android:ellipsize="middle"
		        android:layout_gravity="center_horizontal"
		        />
	        <TextView 
		        android:id="@+id/tv_file_infor_fragment_item_infor"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#b0999999"
		        android:textSize="15dip"
		        android:singleLine="true"
		        android:visibility="gone"
		        />
	    </LinearLayout>
    </RelativeLayout>
    <CheckBox 
	        android:id="@+id/cb_file_infor_fragment_item"
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        style="@style/SelectCheckBox"
	        android:focusable="false"
	        android:visibility="gone"
	        android:clickable="false"
	        />
</RelativeLayout>