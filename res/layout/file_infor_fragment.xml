<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snow"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <include
            android:id="@+id/file_infor_fragment_title"
            layout="@layout/main_title"
            android:focusable="true"
            android:layout_alignParentTop="true"
             />
        <TextView 
            android:id="@+id/tv_file_infor_fragment_infor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/file_infor_fragment_title"
            />
        <View 
            android:id="@+id/file_infor_fragment_seprator_top"
	        android:layout_width="fill_parent"
	        android:layout_height="1dip"
	        android:background="@color/separator_1"
	        android:layout_below="@+id/tv_file_infor_fragment_infor"
	        />
        <GridView 
            android:id="@+id/gv_file_infor_fragment"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dip"
   			android:cacheColorHint="#00000000"
   			android:layout_below="@+id/file_infor_fragment_seprator_top"
   			android:layout_above="@+id/file_infor_fragment_seprator"
   			android:horizontalSpacing="2dip"
   			android:verticalSpacing="2dip"
   			android:listSelector="@drawable/view_item_selector_1"
            ></GridView>
        
        <TextView
            android:id="@+id/tv_file_infor_fragment_select"
            android:layout_width="wrap_content"
	        android:layout_height="25dip"
	        android:gravity="center"
	        android:layout_centerHorizontal="true"
	        android:paddingLeft="10dip"
	        android:paddingRight="10dip"
	        android:visibility="gone"
	        android:textColor="@color/white"
	        android:background="@color/translucent"
	        android:layout_above="@+id/file_infor_fragment_bottom_edit"
            />
        <View 
		    android:id="@+id/file_infor_fragment_seprator"
	        android:layout_width="fill_parent"
	        android:layout_height="2dip"
	        android:background="@color/separator"
	        android:layout_above="@+id/file_infor_fragment_bottom_edit"
	        android:focusable="false"
	        />
        <LinearLayout 
            android:id="@+id/file_infor_fragment_bottom_edit"
            android:layout_width="fill_parent"
	        android:layout_height="40dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/top_bg"
            >
            <org.yyu.msi.view.FileEditView
				android:id="@+id/file_edit_view_bottom"
	            android:layout_width="fill_parent"
		        android:layout_height="fill_parent"      
                >
            </org.yyu.msi.view.FileEditView>
        </LinearLayout>
        <View 
	        android:id="@+id/bg_file_infor_fragment"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_below="@+id/file_infor_fragment_title"
	        android:background="#b0000000"
	        android:visibility="gone"
	        />
    </RelativeLayout>
    
</FrameLayout>