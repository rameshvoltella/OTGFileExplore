<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/view_item_selector"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="10dip"
    	android:layout_marginBottom="10dip"
    	android:layout_centerVertical="true"
        >
        <org.yyu.msi.view.PowerImageView 
	        android:id="@+id/iv_file_infor_fragment_item_type"
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dip"
	        />
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/iv_file_infor_fragment_item_type"
	        android:layout_marginLeft="10dip"
	        android:orientation="vertical"
	        android:layout_toLeftOf="@+id/cb_file_infor_fragment_item"
	        android:layout_marginRight="5dip"
	        >
	        <TextView 
		        android:id="@+id/tv_file_infor_fragment_item_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/black"
		        android:textSize="20dip"
		        android:singleLine="true"
		        />
	        <TextView 
		        android:id="@+id/tv_file_infor_fragment_item_infor"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#b0999999"
		        android:textSize="15dip"
		        android:singleLine="true"
		        />
	    </LinearLayout>
	    <CheckBox 
	        android:id="@+id/cb_file_infor_fragment_item"
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        style="@style/SelectCheckBox"
	        android:layout_marginRight="5dip"
	        android:focusable="false"
	        android:visibility="gone"
	        android:clickable="false"
	        />
    </RelativeLayout>
    
</RelativeLayout>