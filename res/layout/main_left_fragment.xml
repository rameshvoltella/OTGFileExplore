<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_left_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
	
	<TextView
        android:id="@+id/menu_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/chat_title_bg_repeat"
        android:layout_alignParentTop="true"
        android:focusable="false"
         />    
	<ListView 
	    android:id="@+id/lv_main_left_fragment_disk"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:divider="@color/separator"
   		android:cacheColorHint="@android:color/transparent"
   		android:dividerHeight="1dip"
   		android:layout_below="@+id/menu_title"
   		android:layout_above="@+id/main_left_fragment_seprator_0"
   		android:focusable="false"
   		android:layoutAnimation="@anim/gridview_anim_by"
	    />
    <View 
	    android:id="@+id/main_left_fragment_seprator_0"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@color/separator"
        android:layout_above="@+id/layout_left_fragment_edit"
        android:focusable="false"
        />
    <RelativeLayout 
	    android:id="@+id/layout_left_fragment_edit"
	    android:layout_width="fill_parent"
	    android:layout_height="40dip"
	    android:layout_alignParentBottom="true"
	    android:background="@drawable/top_bg"
	    >
	    <Button 
		    android:id="@+id/btn_left_fragment_remove"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:text="@string/edit_safe"
		    android:layout_centerInParent="true"
		    android:textSize="20dip"
		    android:focusable="false"
		    android:background="@drawable/view_item_selector"
		    />
	    <ImageView 
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="2dip"
	        android:src="@drawable/left_fragment_edit"
	        android:layout_centerVertical="true"
	        android:focusable="false"
	        />
	</RelativeLayout>
    
</RelativeLayout>