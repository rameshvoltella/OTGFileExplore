<resources>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置屏幕变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        
    </style>
    
	<style name="D6_Font">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff727475</item>
        <item name="android:shadowColor">#ccffffff</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A1_Font">
        <item name="android:textSize">25.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A2_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A3_Font">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A4_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A5_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="A6_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A7_Font">
        <item name="android:textSize">12.0sp</item>
